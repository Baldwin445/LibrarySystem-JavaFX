            <Label text="出版年：">
               <HBox.margin>
                  <Insets right="35.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="publisherYear" prefHeight="30.0" prefWidth="228.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="200.0" prefHeight="31.0" prefWidth="402.0">
         <children>
            <Label text="ISBN：">
               <HBox.margin>
                  <Insets right="43.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="isbn" prefHeight="30.0" prefWidth="228.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="238.0" prefHeight="31.0" prefWidth="402.0">
         <children>
            <Label text="书藉语言：">
