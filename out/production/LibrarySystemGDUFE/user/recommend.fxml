                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="lang" prefHeight="30.0" prefWidth="228.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="279.0" prefHeight="31.0" prefWidth="402.0">
         <children>
            <Label text="推荐理由：">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Label>
            <TextArea fx:id="recommendInfo" prefHeight="100.0" prefWidth="227.0" styleClass="test" />
         </children>
      </HBox>
      <Button fx:id="recommendButton" layoutX="79.0" layoutY="349.0" mnemonicParsing="false" onAction="#onRecommendButtonClick" styleClass="blue-theme" text="推荐" />
   </children>
</AnchorPane>
