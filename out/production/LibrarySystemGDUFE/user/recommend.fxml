<AnchorPane prefHeight="400.0" prefWidth="600.0" stylesheets="@../css/library.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="user.RecommendController">
   <children>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="14.0" prefHeight="31.0" prefWidth="402.0">
         <children>
            <Label text="书名:">
               <HBox.margin>
                  <Insets right="60.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="bookName" prefHeight="30.0" prefWidth="228.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="59.0" prefHeight="31.0" prefWidth="402.0">
         <children>
            <Label text="作者:">
               <HBox.margin>
                  <Insets right="60.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="author" prefHeight="30.0" prefWidth="228.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="112.0" prefHeight="31.0" prefWidth="402.0">
         <children>
            <Label text="出版社：">
               <HBox.margin>
                  <Insets right="35.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="publisher" prefHeight="30.0" prefWidth="228.0" />
         </children>
      </HBox>
      <HBox alignment="CENTER_LEFT" layoutX="7.0" layoutY="155.0" prefHeight="31.0" prefWidth="402.0">
